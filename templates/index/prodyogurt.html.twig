                            </div>
                            <img class="img-fluid" src="{{ asset('front/assets/img/portfolio/icono-pdf-1.png') }}" alt="" />
                            <h3 class="page-section-heading text-center text-uppercase text-secondary mb-0">{{ compras.nombre }}</h3>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
